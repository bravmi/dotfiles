[alias]
    st = status
    ci = commit
    co = checkout
    br = branch
    sw = switch
    fa = fetch --all
    push-fwl = push --force-with-lease
    push-fii = push --force-with-lease --force-if-includes
[core]
    excludesFile = ~/.gitignore
[pull]
    rebase = true
[includeIf "gitdir:~/path/"]
    path = ~/path/gitconfig
[submodule]
	recurse = true
