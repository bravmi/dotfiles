    st = status
    ci = commit
    co = checkout
    br = branch
    sw = switch
    fa = fetch --all
    re = restore
    push-fwl = push --force-with-lease
    push-fii = push --force-with-lease --force-if-includes
[core]
    excludesFile = ~/.gitignore
[pull]
    rebase = true
[push]
    autoSetupRemote = true
[merge]
    ff = only
	conflictstyle = zdiff3
